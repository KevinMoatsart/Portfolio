@model Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>@string.Format("Membership Type: {0}", "{0:d MMM yyyy}", Model.MembershipType.Name)</li>
    @if(Model.BirthDate != null)
    {
        <li>@string.Format("Birthdate: {0}", Model.BirthDate)</li>
    }
</ul>

