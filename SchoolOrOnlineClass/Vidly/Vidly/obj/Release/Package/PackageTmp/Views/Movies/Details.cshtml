@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>@string.Format("Genre: {0}", Model.Genre.Name)</li>
    <li>@string.Format("Release Date: {0}", Model.ReleaseDate)</li>
    <li>@string.Format("Date Added: {0}", Model.DateAdded)</li>
    <li>@string.Format("Number in Stock: {0}", Model.InStock)</li>
</ul>

